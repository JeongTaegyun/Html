  <title> lotto </title>
  <script>

function find(){
	var arr = Array();
	while(arr.length < 6){
		var num = Math.floor(Math.random()*45)+1;
		num++;
		/* if(arr.indexOf(num)<0){
			arr.push(num);
		} */
	}
	arr.sort(function(a,b){
		return a-b;
	});
	document.write("로또 번호: " + arr.join(","));
}
  </script>
 </head>

 <body>
 <form>
	<input type=button value="추첨하기" onClick="find()">
 </form> 
