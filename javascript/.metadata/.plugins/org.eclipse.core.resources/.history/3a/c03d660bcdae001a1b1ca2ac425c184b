	<table border=1 align=center width=800 height=280>
		<script language="javascript">
			document.write("<tr>");
			for (i = 2; i <= 9; i++) {
				document.write("<th>" + i + "단</th>")
			}
			document.write("</tr>");
			for (j = 1; j <= 9; j++) {
				document.write("</td>");
				for (i = 2; i <= 9; i++) {
					document.write(i + "*" + j + "=" + i * j);
				}
				document.write("</td>");
			}
		</script>
	</table>
</body>
