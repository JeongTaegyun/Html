	<table border=1 align=center width=800 height=280>
			<script language="javascript">
				document.write("<tr>");
				for (i = 2; i <= 9; i++) {
					document.write("<th>" + i + "단</th>")
				}
				document.write("</tr>");
				for (j = 2; j <= 9; j++) {
					document.write("<td>");
					for (i = 1; i <= 9; i++) {
						document.write(j + "*" + i + "=" + i * j + "<br>");
					}
					document.write("</td>");
				}
			</script>
	</table>
</body>
